<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Radiometry.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Радиометрия" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Начните работу прямо сейчас" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Используйте возможности мобильных устройств для эффективной работы" FontSize="16" Padding="30,0,30,0"/>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Узнать больше о радиометрии "/>
                        <Span Text="*Ссылка на описание метода радиометрии" FontAttributes="Bold"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
		<Button Text="Войти"/>
		<Button Text="Создать"/>
	</StackLayout>

</ContentPage>
