<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Radiometry.Register"
			 BackgroundColor="#efdecd">

    <StackLayout>
		<Frame BackgroundColor="#efdecd" Padding="24" CornerRadius="0">
			<Label Text="Регистрация" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
		</Frame>

		<Label Text="Логин" FontSize="16" Padding="30,0,30,0"/>
		<Entry x:Name="LoginEntry" Placeholder="Логин"/>

		<Label Text="Пароль" FontSize="16" Padding="30,0,30,0"/>
		<Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="true"/>

		<Label Text="Дополнительная информация" FontSize="Title" Padding="30,10,30,10"/>

		<Label Text="Организация" FontSize="16" Padding="30,0,30,0"/>
		<Entry x:Name="OrganizationEntry" Placeholder="Организация"/>

		<Button Text="Регистрация" BackgroundColor="#00a86b" TextColor="White"/>
		<Button Text="Войти" BackgroundColor="#00a86b" TextColor="White"/>
	</StackLayout>

</ContentPage>
