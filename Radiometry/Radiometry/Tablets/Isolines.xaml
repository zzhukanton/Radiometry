<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Radiometry.Isolines"
			 BackgroundColor="#efdecd"
			 NavigationPage.HasNavigationBar="false">

	<StackLayout>
		<Frame BackgroundColor="#efdecd"
			   Padding="24" 
			   CornerRadius="0">
			<Label Text="Карта" 
				   HorizontalTextAlignment="Center" 
				   TextColor="Black" 
				   FontSize="36"/>
		</Frame>
		<ScrollView>
			<StackLayout>
				<Label Text="Дата создания: 12.12.2020" 
					   FontSize="Title" 
					   Padding="30,10,30,10"
					   TextColor="Black" />
				<Label Text="Координаты начала: 41.40338, 2.17403" 
					   FontSize="Subtitle" 
					   Padding="30,10,30,10"
					   TextColor="Black" />
				<Image Source="nir.jpg"
					   Aspect="AspectFill"
					   HeightRequest="400"
					   WidthRequest="300"
					   HorizontalOptions="Center"/>
				<Button Text="Назад" 
						x:Name="BackButton"
						BackgroundColor="#00a86b" 
						TextColor="White"
						Margin="30,10,30,10"
						Clicked="BackButton_Clicked"/>
			</StackLayout>
		</ScrollView>
	</StackLayout>
</ContentPage>
