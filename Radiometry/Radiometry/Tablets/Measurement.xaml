<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Radiometry.Measurement">

	<StackLayout>
		<Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
			<Label Text="Название планшета" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
		</Frame>
		<Label Text="Пройдено точек: 12 из 25" FontSize="Title" Padding="30,10,30,10"/>
		<Image Source="" /> <!--изображение сетки с прогрессом-->

		<Label Text="Значение" FontSize="Title" Padding="30,10,30,10"/>
		<Entry x:Name="value" Placeholder="0"/>

		<Button Text="Добавить"/>
		<Button Text="Завершить"/> <!--появляется по завершению-->
		<Button Text="Назад"/>
	</StackLayout>
</ContentPage>
