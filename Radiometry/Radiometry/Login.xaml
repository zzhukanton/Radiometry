<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Radiometry.Login">

	<StackLayout>
		<Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
			<Label Text="Войти" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
		</Frame>
		<Label Text="Логин" FontSize="Title" Padding="30,10,30,10"/>
		<Entry x:Name="LoginEntry" Placeholder="Логин"/>
		<Label Text="Пароль" FontSize="Title" Padding="30,10,30,10"/>
		<Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="true"/>
		<Button Text="Войти"/>
		<Button Text="Назад"/>
	</StackLayout>
</ContentPage>
